<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <!-- Form Type -->
        <parameter key="openl10n.form.type.login.class">Openl10n\Bundle\UserBundle\Form\Type\LoginType</parameter>

        <!-- Processor -->
        <parameter key="openl10n.processor.create_user.class">Openl10n\Bundle\UserBundle\Processor\CreateUserProcessor</parameter>
    </parameters>

    <services>
        <!-- Form Type -->
        <service id="form.type.login" class="%openl10n.form.type.login.class%">
            <tag name="form.type" alias="login" />
        </service>

        <!-- Processor -->
        <service id="openl10n.processor.create_user" class="%openl10n.processor.create_user.class%">
            <argument type="service" id="security.encoder_factory" />
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>

        <service id="openl10n.oauth_aware.user_provider" class="Openl10n\Bundle\UserBundle\OAuth\Provider\OAuthAwareUserProvider">
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>
    </services>
</container>
