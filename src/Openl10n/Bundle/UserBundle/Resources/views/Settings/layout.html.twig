{% extends '@Openl10nWeb/layout/main.html.twig' %}

{% trans_default_domain 'user' %}
{% set active_menu = active_menu|default('') %}

{% block content %}
  <div class="ol-header">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="pull-right">
            <a class="btn btn-dark" href="{{ path('openl10n_user_profile_show', {username: app.user.username}) }}">
              {{ 'settings.public_profile.link'|trans }}
            </a>
          </div>

          <div>
            <h2 class="title title-lg">
              {{ 'settings.title'|trans }}
            </h2>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <div class="list-group x-list-group-aside">
          <a href="{{ path('openl10n_user_settings_general') }}" class="list-group-item {% if active_menu == 'general' %}active{% endif %}">
            {{ 'settings.menu.general'|trans }}
          </a>
          <a href="{{ path('openl10n_user_settings_password') }}" class="list-group-item {% if active_menu == 'password' %}active{% endif %}">
            {{ 'settings.menu.password'|trans }}
          </a>
          <a href="{{ path('openl10n_user_settings_leave') }}" class="list-group-item {% if active_menu == 'leave' %}active{% endif %}">
            {{ 'settings.menu.leave'|trans }}
          </a>
        </div>
      </div>

      <div class="col-md-8">
        {% block settings_content '' %}
      </div>
    </div>
  </div>
{% endblock %}
