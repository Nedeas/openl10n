{% extends '@Openl10nWeb/Project/layout.html.twig' %}

{% set active_menu = 'resources' %}

{% block settings_content %}
  <div class="row">
    <div class="col-sm-12">
      <h3 class="title title-md title-underlined">
        Import translations
      </h3>
    </div>
    <div class="col-sm-8">
      <form action="{{ path('openl10n_resource_import', {project: project.slug, resource: resource.id}) }}" method="POST" {{ form_enctype(form) }} novalidate>

          <div>
            {{ form_row(form.file) }}

            {{ form_row(form.locale) }}

            {{ form_rest(form) }}
          </div>

          <div>
            <button type="submit" class="btn btn-primary">
              Import
            </button>
          </div>
      </form>
    </div>
  </div>
{% endblock %}
