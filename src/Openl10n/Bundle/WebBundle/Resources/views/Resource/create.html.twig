{% extends '@Openl10nWeb/Project/layout.html.twig' %}

{% set active_menu = 'resources' %}

{% block settings_content %}
  <div class="row">
    <div class="col-sm-12">
      <h3 class="title title-md title-underlined">
        Create resource
      </h3>
    </div>
    <div class="col-sm-8">
      <form action="{{ path('openl10n_resource_create', {project: project.slug}) }}" method="POST" {{ form_enctype(form) }} novalidate>

          <div>
            {{ form_widget(form) }}
          </div>

          <div>
            <button type="submit" class="btn btn-primary">
              Create
            </button>
          </div>
      </form>
    </div>
  </div>
{% endblock %}
