<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Openl10n</title>

  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

  {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/dist/css/vendor.css') }}" />
    <link rel="stylesheet" href="{{ asset('assets/dist/css/main.css') }}" />
  {% endblock %}

  <script src="{{ asset('assets/dist/vendor/requirejs/require.js') }}"></script>
  <script>
    requirejs.config({
      baseUrl: "{{ asset('assets/dist/js') }}",
      urlArgs: "bust=" + (new Date()).getTime()
    });

    require(['config'], function () {
      requirejs.config({
        paths: {
          fos_routing: "{{ asset('bundles/fosjsrouting/js/router') }}",
          fos_routing_data: "{{ path('fos_js_routing_js', {'_format': 'json', 'noext': 1}) }}",
        },
        shim: {
          fos_routing: {
            exports: 'fos.Router'
          }
        },
      });

      require(['init']);
    });
  </script>
</head>
<body>
  {% block body '' %}
</body>
</html>
